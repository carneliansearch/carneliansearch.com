---
layout: layouts/base.njk
---

<header class="home-header p-4 md:p-8 bg-contain bg-no-repeat">
  <div class="max-w-screen-xl mx-auto">
    {% include 'partials/siteHeader.njk' %}

    <div class="mx-auto md:text-center lg:w-2/3 lg:px-8">
      <h1 class="uppercase text-2xl mb-4">{{ title }}</h1>
      <p class="text-xl font-serif">{{ teaser }}</p>
    </div>
  </div>
</header>

<main class="bg-white-pure text-blue p-4 md:p-8">

  {% if lead_image %}
    {% blockImage "./src" + lead_image, title, "(min-width: 30em) 50vw, 100vw", "w-full mb-4 mx-auto md:mb-8 lg:w-2/3" %}
  {% endif %}

  <article class="mx-auto prose font-serif md:prose-lg mb-4 md:mb-8">
  {{ content | safe }}
  </article>

  {% if case_study.is_case_study %}
    <div class="flex items-center justify-center mb-4 md:mb-8">
      <a href="/casestudies" class="ml-4 mt-4 inline-block font-serif p-2 border border-white transition-colors hover:border-red hover:text-red">
      View More Case Studies
      </a>
    </div>
  {% endif %}

  <div class="max-w-screen-xl mx-auto">
    {% include 'partials/mailingList.njk' %}
  </div>

</main>
